FROM mcr.microsoft.com/dotnet/core/aspnet:2.2-stretch-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:2.2-stretch AS build
WORKDIR /src
COPY ["Auth0Api/Auth0Api.csproj", "Auth0Api/"]
RUN dotnet restore "Auth0Api/Auth0Api.csproj"
COPY . .
WORKDIR "/src/Auth0Api"
RUN dotnet build "Auth0Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Auth0Api.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Auth0Api.dll"]